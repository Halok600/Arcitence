# Application Settings
APP_NAME=Articence PBX Microservice
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration (PostgreSQL)
# For Docker (recommended - default):
DATABASE_URL=postgresql+asyncpg://articence_user:articence_password_2026@localhost:5432/articence_db

# For Native PostgreSQL Installation (update with your password):
# DATABASE_URL=postgresql+asyncpg://postgres:YOUR_PASSWORD@localhost:5432/articence_db

# Database Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# AI Service
AI_SERVICE_URL=http://localhost:8001
AI_SERVICE_TIMEOUT=30.0
AI_SERVICE_MAX_RETRIES=5

# Server Configuration
HOST=0.0.0.0
PORT=8000

# WebSocket
WS_HEARTBEAT_INTERVAL=30

# CORS Settings (for development)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:5173"]
